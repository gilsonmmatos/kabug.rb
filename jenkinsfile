pipeline{
    agent any 
    
    stages{ 
        stage('Build') {
            steps {
                echo 'Build or Resolve Dependencies!'
                sh 'bundle install'
            }
        }
        stage('Test'){
            steps {
                echo 'Build Regression Test'
            } 
        }
        stage('UAT'){
            steps {
                echo 'Wait for User Acceptance'
                input(message: 'Go to prodution?', ok: 'Yes')
            }
        }
        stage('Prod') {
            steps {
                echo 'WebApp is Ready :)'
                
            }
        }
        
    }
    
}